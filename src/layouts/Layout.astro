---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="sidebar">
			<ul>
				<li><h2>沈 研究室</h2></li>
				<li><a href="/">ホーム</a></li>
				<li><a href="/about">研究内容</a></li>
				<li><a href="/members">メンバー</a></li>
				<li><a href="/research">研究業績</a></li>
				<li><a href="/album">アルバム</a></li>
				<li><a href="/contact">お問い合わせ</a></li>
			</ul>
		</div>
		<div class="content">
			<slot />
		</div>
	</body>
</html>
<style is:global>
	html {
		font-family: 'Roboto', sans-serif;
		background: #f0f0f0;
	}
	body {
		margin: 0;
		display: flex;
		min-height: 100vh;
	}
	.sidebar {
		width: 250px;
		background-color: #2c3e50;
		color: #ecf0f1;
		padding: 1rem;
		box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
		position: fixed;
		height: 100vh;
		overflow-y: auto;
	}
	.sidebar ul {
		list-style: none;
		padding: 0;
		margin: 0;
		width: 200px;
	}
	.sidebar li {
		padding: .5rem;
		margin: 0;
		width: 200px;
	}
	.sidebar a {
		display: block;
		color: #ecf0f1;
		text-decoration: none;
		font-weight: bold;
		transition: background-color 0.3s, color 0.3s;
		padding: 1rem;
		margin: 0;
	}
	.sidebar a:hover {
		background-color: rgba(236, 240, 241, 0.5);
		color: #ecf0f1;
	}
	.sidebar h2 {
		margin: 0;
		padding: 1rem;
		text-align: center;
		background-color: #
		color: #ecf0f1;
	}
	.content {
		flex: 1;
		padding: 2rem;
		margin-left: 250px;
		background-color: #ffffff;
		box-shadow: -2px 0 5px rgba(0, 0, 0, 0.1);
	}
</style>
